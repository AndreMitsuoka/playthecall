<div class="mission-title">
  <%= st 'mission.indexed_title', position: @mission.position, title: @mission.title %>
</div>

<%= form_for @mission.enroll(@user) do |f| %>

  <%= f.fields_for :enrollment_images do |i| %>
    <%= i.label :image, "Adicione uma imagem para essa missão" %>
    <%= i.file_field :image %>
  <% end %>

  <%= f.label :description, "Descreva como foi sua experiência nessa missão" %>
  <%= f.text_area :description %>

  <p class="buttons">
    <%= link_to "Cancelar", mission_path(@mission), class: :cancel %>
    <%= f.submit "Salvar" %>
  </p>
<% end %>
